* { box-sizing: border-box }
body { height: 100vh }

#openirc
  height: 100%

  display: flex

// Channel list tab
#channels
  width: 10%
  background: #f2

#channel-list
  width: 100%

  margin: 0
  padding: 1em

  display: flex
  flex-direction: column

  list-style-type: none

.channel-item
  margin 0.5em 0


// Current channel tab
#current-channel
  width: 90%

  display: flex
  flex-direction: column

#logs
  margin: 0
  padding: 10px

  flex: 1 1 auto
  overflow-y: auto
  min-height: 0px

  list-style-type: none

#typing-form
  background: #e2e2e2
  padding: 15px

  display: flex
  align-items: center

#typing-label
  margin-right: 7px

#typing-text
  flex: 1 1 auto

#typing-text, #typing-submit
    background: none
    border: none
    outline: none
