* { box-sizing: border-box }
body { height: 100vh }

#openirc
  height: 100%

  display: flex
  flex-direction: column

  > ul
    margin: 0
    padding: 10px

    flex: 1 1 auto
    overflow-y: auto
    min-height: 0px

    > li
      list-style-type: none

  > form
    background: #e2e2e2
    padding: 15px

    display: flex
    align-items: center

    > label
      margin-right: 7px

    > label + input
      flex: 1 1 auto

    > input
      background: none
      border: none
      outline: none
